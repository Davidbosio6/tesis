{% extends 'AppBundle:Layout:admin_base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <h3>Usuarios</h3>
        </div>
        <div style="margin-right: 1em;">
            <a class="btn btn-dark pull-right" href="{{ path('user_create') }}">
                <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Usuario
            </a>
        </div>
    </div>

    <hr>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre de usuario</th>
            <th scope="col">Fecha de creación</th>
            <th scope="col">Correo electrónico</th>
            <th scope="col">Rol</th>
            <th scope="col">Activo</th>
        </tr>
        </thead>
        <tbody>
            {% for user in table %}
                <tr>
                    <td><i class="fa fa-search"></i></td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.createdAt | date('d-m-Y H:i') }}</td>
                    <td>{{ user.email }}</td>
                    <td>Admin</td>
                    <td>{{ user.isActive }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
