{% extends 'AppBundle:Layout:admin_base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <h3>Países</h3>
        </div>
        <div style="margin-right: 1em;">
            <a class="btn btn-dark pull-right" href="{{ path('country_create') }}">
                <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Pais
            </a>
        </div>
    </div>

    <hr>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Fecha de creación</th>
        </tr>
        </thead>
        <tbody>
        {% for country in table %}
            <tr>
                <td>
                    <a href="{{ path('country_detail', {id: country.id}) }}">
                        <i class="fa fa-search"></i>
                    </a>
                </td>
                <td>{{ country.name }}</td>
                <td>{{ country.createdAt | date('d-m-Y H:i') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
