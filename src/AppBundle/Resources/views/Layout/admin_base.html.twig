<!DOCTYPE html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Administración{% endblock %}</title>

    <link href="{{ asset('assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/stylesheets/css/modern-business.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/stylesheets/css/dashboard.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/stylesheets/css/chart.min.css') }}" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('logo.png') }}"/>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand" href={{ path('dashboard') }}>Administración</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">

        </form>
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#">Settings</a>
                    <a class="dropdown-item" href="#">Activity Log</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href={{ path('logout') }}>Salir</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>

                        <a class="nav-link" href={{ path('dashboard') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Inicio
                        </a>

                        <a class="nav-link" href={{ path('student_pre_sign_up') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-align-justify"></i></div>
                            Pre-Inscripción
                        </a>

                        <a class="nav-link" href={{ path('teacher_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-align-justify"></i></div>
                            Inscripción
                        </a>

                        <a class="nav-link" href={{ path('year_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-calendar-alt"></i></div>
                            Ciclos lectivos
                        </a>

                        <a class="nav-link" href={{ path('installment_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-money-bill-alt"></i></div>
                            Gestión de cuotas
                        </a>

                        <div class="sb-sidenav-menu-heading">Configuraciones</div>

                        <a class="nav-link" href={{ path('teacher_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-id-card"></i></div>
                            Profesores
                        </a>

                        <a class="nav-link" href={{ path('student_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-id-badge"></i></div>
                            Alumnos
                        </a>

                        <a class="nav-link" href={{ path('shift_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-id-badge"></i></div>
                            Turnos y Salas
                        </a>

                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-clipboard"></i></div>
                            &nbspGenerales
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href={{ path('subject_list') }}>Asignaturas</a>
                                <a class="nav-link" href={{ path('city_list') }}>Ciudades</a>
                                <a class="nav-link" href={{ path('province_list') }}>Provincias</a>
                                <a class="nav-link" href={{ path('country_list') }}>Países</a>
                            </nav>
                        </div>

                        <div class="sb-sidenav-menu-heading">Personalización</div>

                        <a class="nav-link" href={{ path('plan_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-credit-card"></i></div>
                            Planes y Cuotas
                        </a>

                        <a class="nav-link" href={{ path('about_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Sobre nosotros
                        </a>

                        <a class="nav-link" href={{ path('settings_list') }}>
                            <div class="sb-nav-link-icon"><i class="fas fa-highlighter"></i></div>
                            Otros
                        </a>
                        </div>
                    </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Sesión activa:</div>
                    {{ app.user.teacher.firstName }} {{ app.user.teacher.lastName }}
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <div id="page-wrapper">
                        <div class="row">
                            <div class="col-md-12">
                                {% for flash_message in app.session.flashBag.get('info') %}
                                    <div class="alert alert-info alert-dismissible mgt-35 mgb-0" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        {{ flash_message | trans }}
                                    </div>
                                {% endfor %}

                                {% for flash_message in app.session.flashBag.get('warning') %}
                                    <div class="alert alert-warning alert-dismissible mgt-35 mgb-0" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        {{ flash_message | trans }}
                                    </div>
                                {% endfor %}

                                {% for flash_message in app.session.flashBag.get('error') %}
                                    <div class="alert alert-danger alert-dismissible mgt-35 mgb-0" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        {{ flash_message | trans }}
                                    </div>
                                {% endfor %}

                                {% for flash_message in app.session.flashBag.get('success') %}
                                    <div class="alert alert-success alert-dismissible mgt-35 mgb-0" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        {{ flash_message | trans }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% block body %}{% endblock %}
                    {% block javascripts %}
                        <script src="{{ asset('assets/vendor/jquery/jquery.min.js') }}"></script>
                        <script src="{{ asset('assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
                        <script src="{{ asset('assets/js/dashboard.js') }}"></script>
                        <script src="{{ asset('assets/js/font-awesome.min.js') }}"></script>
                        <script src="{{ asset('assets/js/chart.js') }}"></script>
                    {% endblock %}
                </div>
            </main>
        </div>
    </div>
</body>
