{% extends 'AppBundle:Layout:admin_base.html.twig' %}

{% block body %}
    <h3>Inicio</h3>
    <hr>

    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="view overlay">
                    <img class="card-img-top" src="{{ asset('assets/img/dashboard1.jpg') }}" alt="Card image cap">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

                <div class="card-body">
                    <a href="{{ path('student_create') }}" class="black-text d-flex justify-content-end">
                        <h5>Crear Alumno <i class="fas fa-angle-double-right"></i></h5>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="view overlay">
                    <img class="card-img-top" src="{{ asset('assets/img/dashboard3.jpg') }}" alt="Card image cap">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

                <div class="card-body">
                    <a href="{{ path('subject_create') }}" class="black-text d-flex justify-content-end">
                        <h5>Crear Asignatura <i class="fas fa-angle-double-right"></i></h5>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="view overlay">
                    <img class="card-img-top" src="{{ asset('assets/img/dashboard2.jpg') }}" alt="Card image cap">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

                <div class="card-body">
                    <a href="{{ path('teacher_create') }}" class="black-text d-flex justify-content-end">
                        <h5>Crear Profesor <i class="fas fa-angle-double-right"></i></h5>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="view overlay">
                    <img class="card-img-top" src="{{ asset('assets/img/dashboard3.jpg') }}" alt="Card image cap">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

                <div class="card-body">
                    <a href="{{ path('subject_create') }}" class="black-text d-flex justify-content-end">
                        <h5>Crear Asignatura <i class="fas fa-angle-double-right"></i></h5>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area mr-1"></i>
                     Alumnos
                </div>
                <div class="card-body"><canvas id="studentChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area mr-1"></i>
                    Salas
                </div>
                <div class="card-body"><canvas id="classroomChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}



    <script>
        var student = document.getElementById("studentChart").getContext('2d');
        var studentChart = new Chart(student, {
            type: 'pie',
            data: {
                labels: ["Masculino", "Femenino", "No define"],
                datasets: [{
                    data: [{{ sexes }}],
                    backgroundColor: [
                        "#46BFBD",
                        "#f7464a",
                        "#e5e519"
                    ],
                    hoverBackgroundColor: [
                        "#5AD3D1",
                        "#ff6c70",
                        "#ffff56"
                    ]
                }]
            },
            options: {
                responsive: true
            }
        });

        var clasroom = document.getElementById("classroomChart").getContext('2d');
        var classroomChart = new Chart(clasroom, {
            type: 'pie',
            data: {
                labels: {{ shiftNames | raw }},
                datasets: [{
                    data: {{ classrooms |raw }},
                    backgroundColor: [
                        "#46BFBD",
                        "#b4b402",
                        "#f7464a",
                        "#f57715",
                    ],
                    hoverBackgroundColor: [
                        "#5AD3D1",
                        "#c7c756",
                        "#ff6c70",
                        "#f1944c",
                    ]
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
{% endblock javascripts %}
