{% extends 'AppBundle:Layout:admin_base.html.twig' %}

{% block body %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-10">
            <h3>Inscripci√≥n</h3>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header text-white bg-dark">
                    Seleccionar alumno pre-inscripto
                </div>

                <div class="card-body" style="height: 120px">
                    <dl>
                        <dd>{{ form_widget(form.student) }}</dd>
                    </dl>

                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" name="submit" class="btn btn-dark pull-right">
                                Siguiente
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header text-white bg-dark">
                    Inscribir nuevo alumno
                </div>

                <div class="card-body" style="height: 120px">
                    <a class="btn btn-dark pull-right" href="{{ path('student_create') }}" style="margin-top: 20px; margin-left: 170px">
                        <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Alumno
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $("#select_user_for_sign_up_student").select2({
            language: {
                noResults: function () {
                    return "No se encontraron resultados.";
                },
                searching: function () {
                    return "Buscando...";
                }
            }
        });
    </script>
{% endblock javascripts %}
