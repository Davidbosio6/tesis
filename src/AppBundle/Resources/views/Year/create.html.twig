{% extends 'AppBundle:Layout:admin_base.html.twig' %}

{% block body %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-10">
            <h3>Nuevo Ciclo lectivo</h3>
        </div>
    </div>

    <hr>

    <div class="card">
        <div class="card-header text-white bg-dark">
            Datos del ciclo lectivo
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <dl>
                        <dt>Nombre</dt>
                        <dd>{{ form_widget(form.name) }}</dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <dl>
                        <dt>Turnos</dt>
                        {% if form.shifts.vars.choices is not empty %}
                            <dd>{{ form_widget(form.shifts) }}</dd>
                        {% else %}
                            {{ form_widget(form.shifts) }} -
                        {% endif %}
                    </dl>
                    <small>
                        <i>
                            Nota: Para cargar un ciclo lectivo es necesario tener al menos un turno creado y ese turno no estar asignado a otro ciclo lectivo.
                        </i>
                    </small>
                </div>
            </div>
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-md-12">
            <button type="submit" name="submit" class="btn btn-dark pull-right">
                Guardar
            </button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
